# CodeBumble Environment Configuration
# Copy this file to .env and add your actual values

# Required: Google Gemini API Key
# Get yours at: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# Typing simulation settings
TYPING_SPEED_MIN=0.05
TYPING_SPEED_MAX=0.15
WORD_PAUSE_MIN=0.3
WORD_PAUSE_MAX=0.8

# Screenshot and monitoring settings
SCREENSHOT_INTERVAL=2.0
WINDOW_DETECTION_THRESHOLD=0.8

# Stealth settings
MAX_TYPING_SESSIONS_PER_HOUR=5
IDLE_TIME_BEFORE_ACTIVATION=3.0
TAB_TRIGGER_DELAY=1.0

# Output method settings
USE_CLIPBOARD=true
AUTO_TYPE=false

# Debug settings
DEBUG_MODE=false
SAVE_SCREENSHOTS=false
LOG_LEVEL=INFO

# Optional: Custom paths
# TESSERACT_PATH=/opt/homebrew/bin/tesseract
# SCREENSHOT_SAVE_DIR=/tmp/codebumble_screenshots
